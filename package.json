{
  "name": "atelier",
  "private": true,
  "version": "0.0.0",
  "packageManager": "pnpm@10.23.0",
  "scripts": {
    "generate:openapi": "pnpm --filter api generate:openapi",
    "generate:migration": "pnpm --filter api migration:generate",
    "run:migration": "pnpm --filter api migration:run",
    "revert:migration": "pnpm --filter api migration:revert",
    "dev:api": "pnpm --filter api start:dev",
    "dev:web": "pnpm turbo run web#dev",
    "prod:api": "pnpm --filter api start:prod",
    "prod:web": "pnpm --filter web start",
    "build:api": "pnpm turbo run api#build",
    "build:web": "pnpm turbo run web#build",
    "build": "pnpm turbo build",
    "clean": "rm -rf packages/**/dist packages/**/.nuxt",
    "test:api:unit": "pnpm --filter api test:unit",
    "test:api:integration": "pnpm --filter api test:integration",
    "test:api:e2e": "pnpm --filter api test:e2e",
    "test:api": "pnpm --filter api test"
  },
  "devDependencies": {
    "turbo": "2.6.3"
  }
}
